@model EditRoleViewModel;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@*<h1>Edit Role</h1>*@
<div class="card">
    <div class="row">
        <div class="card-body">
            <div class="row">

                <div class="col-md-6 col-sm-12">
                    <div class="card table-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                Users in this role
                            </h5>
                            <div class="card-header-right">
                                <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-success"
                                   style="width:auto">Add or Remove User</a>

                            </div>
                        </div>
                        <div class="card-body px-0 py-0">
                            <div class="table-responsive">
                                <div class="session-scroll" style="position:relative;">
                                    <table class="table table-striped">
                                     
                                        <tbody>
                                            @foreach (var item in Model.User)
                                            {

                                                <tr id="tr_@Model.Id">

                                                    <td>
                                                        <a class="pointer-events" onclick="location.href = '@(Url.Action("EditUserInRole", "Administration", new { id = Model.Id }))'">@item</a>
                                                    </td>
                                                    @*<td>
                                                        <a asp-action="EditUserInRole" asp-controller="Administration" asp-route-roleId="@Model.Id"
                                                           style="width:auto">Add or Remove User</a>

                                                    </td>*@
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                       
                        </div>
                        <div class="col-md-6 col-sm-12">
                            <form method="post" class="mt-3">
                            <div class="form-group row">
                                <label asp-for="Id" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="Id" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="RoleName" class="col-sm-2 control-label"></label>
                                <div class="col-sm-10">
                                    <input asp-for="RoleName" class="form-control" />
                                    <span asp-validation-for="RoleName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="from-group row" style="display: flex; flex-direction:row-reverse">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary">Update</button>
                                    <a asp-action="ListRole" class="btn btn-danger">Cancel</a>
                                </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
    </div>
</div>

